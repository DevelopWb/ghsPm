<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色 最下面-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <item
        android:height="400dp"
        android:width="320dp"
        android:top="60dp"
        android:bottom="150dp"
        android:drawable="@mipmap/splash_shadow"
        android:left="60dp">
        <!-- 图片 -->
    </item>

    <item
        android:width="130dp"
        android:height="130dp"
        android:drawable="@mipmap/splash_image"
        android:gravity="center_horizontal"
        android:top="150dp">
    </item>
    <item
        android:width="50dp"
        android:height="15dp"
        android:drawable="@mipmap/splash_title"
        android:gravity="center_horizontal"
        android:top="300dp">
        <!-- 图片 -->
    </item>
    <item
        android:width="150dp"
        android:height="18dp"
        android:drawable="@mipmap/splash_bottom_text"
        android:gravity="bottom|center_horizontal"
        android:bottom="80dp">
    </item>
</layer-list>