<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".models.workOrder.createOrder.CreateOrderSubmitActivity">

    <include
        layout="@layout/create_order_actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_gray_light">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_white"
        >
        <LinearLayout
            android:id="@+id/create_order_submit_follow_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_white"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="跟进人"
                android:textColor="#5F5F5F"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/create_order_submit_follow_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                android:gravity="right|center"
                android:text="请选择"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/use_guide_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/app_gray_light">

        </View>

        <LinearLayout
            android:id="@+id/create_order_submit_check_ly"
            android:layout_width="match_parent"
            android:background="@color/app_white"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="验收人"
                android:textColor="#5F5F5F"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/create_order_submit_check_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                android:gravity="right|center"
                android:text="请选择"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/use_guide_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/app_gray_light">

        </View>

        <LinearLayout
            android:id="@+id/create_order_submit_copy_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <TextView


                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="抄送人"
                android:textColor="#5F5F5F"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/create_order_submit_copy_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                android:gravity="right|center"
                android:text="请选择"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/use_guide_arrow_right" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_order_submit_time_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_gray_bottom_top_shape_1px"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/app_red_light"
            android:textSize="16dp" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="期望上门时间"
            android:textColor="#5F5F5F"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/create_order_submit_time_content_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:text="尽快上门"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/use_guide_arrow_right" />

    </LinearLayout>


</LinearLayout>