<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/select_photos_root_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/rv_white_shadow_shape"
    android:orientation="vertical">

    <EditText
        android:id="@+id/select_photos_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="left"
        android:hint="请输入内容..."
        android:inputType="textMultiLine"
        android:maxLength="300"
        android:minHeight="60dp"
        android:padding="15dp"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center|left"
        android:minHeight="60dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_photos_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
