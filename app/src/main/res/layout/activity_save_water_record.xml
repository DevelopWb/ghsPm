<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include
        layout="@layout/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"></include>

    <TextView
        android:id="@+id/save_record_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/app_black"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="15dp"
        android:background="#E0E0E0"></View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="水表数"
        android:textColor="@color/app_black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/save_record_value_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rv_white_shadow_shape"
        android:gravity="center_vertical"
        android:hint="请输入水表数"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:textColor="@color/app_black"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="备注"
        android:textColor="@color/app_black"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rv_white_shadow_shape"
        android:minHeight="100dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/save_record_content_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入备注,最多输入20字..."
            android:inputType="textMultiLine"
            android:maxLength="20"
            android:minHeight="100dp"
            android:padding="15dp"
            android:textSize="16dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/save_record_confirm_tv"
        android:text="确定"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        style="@style/ghs_pm_bt_default" />

</LinearLayout>