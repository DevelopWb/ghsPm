<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingLeft="20dp">

    <TextView
        android:id="@+id/village_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:textColor="@color/app_black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/village_selected_tag_tv"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:src="@mipmap/selected_icon_right"
        app:layout_constraintBottom_toBottomOf="@+id/village_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/village_name_tv"
        app:layout_constraintTop_toTopOf="@+id/village_name_tv" />
</android.support.constraint.ConstraintLayout>