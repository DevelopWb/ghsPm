<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="#1A1A1A"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/menu_unread_tag_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/un_read_red_point_circle_shape"
        android:gravity="center"
        android:textColor="@color/app_white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/menu_title_tv"
        app:layout_constraintRight_toLeftOf="@+id/patrol_arrow_right_tv"
        app:layout_constraintTop_toTopOf="@+id/menu_title_tv" />

    <ImageView
        android:id="@+id/patrol_arrow_right_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/menu_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_title_tv" />
</android.support.constraint.ConstraintLayout>