<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/select_user_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/allot_cb_normal" />

    <TextView
        android:id="@+id/organize_user_name_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="部门"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/organize_user_job_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="部门"
        android:layout_weight="1"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/organize_user_work_status_tv"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/table_task_top_tag"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:textColor="@color/app_white"
        android:text="今日值班"
        android:textSize="12dp" />

</LinearLayout>