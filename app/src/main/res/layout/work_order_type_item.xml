<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp">

    <TextView
        android:id="@+id/order_type_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:textColor="@color/app_black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_type_unread_amount_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/stroke_red_bg"
        android:text="99"
        android:textSize="10dp"
        android:textColor="@color/app_red_light"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/order_type_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/order_type_name_tv"
        app:layout_constraintTop_toTopOf="@+id/order_type_name_tv" />

    <ImageView
        android:id="@+id/order_type_selected_tag_tv"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginRight="30dp"
        android:src="@mipmap/right_duihao_icon"
        app:layout_constraintBottom_toBottomOf="@+id/order_type_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_type_name_tv" />


    <View
        android:id="@+id/order_type_selected_divider_v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_gray_light"
        app:layout_constraintTop_toBottomOf="@+id/order_type_name_tv"></View>
</android.support.constraint.ConstraintLayout>