<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/patrol_check_icon_iv"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/statement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patrol_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:textColor="#1A1A1A"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintRight_toLeftOf="@+id/patrol_arrow_right_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/patrol_check_icon_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/patrol_arrow_right_tv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/arror_right"
        app:layout_constraintBottom_toBottomOf="@+id/patrol_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patrol_title_tv" />

</android.support.constraint.ConstraintLayout>