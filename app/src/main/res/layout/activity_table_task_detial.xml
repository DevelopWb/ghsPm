<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/app_white"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/top_title_layout_ll"
        layout="@layout/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_rv"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp"
        android:background="#F7F7F7"
        app:layout_constraintBottom_toTopOf="@+id/table_task_deal_tv"
        app:layout_constraintTop_toBottomOf="@+id/top_title_layout_ll"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/table_task_deal_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:textColor="@color/app_white"
        android:textSize="18dp"
        android:background="@drawable/bt_selecter_default_app_color"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>