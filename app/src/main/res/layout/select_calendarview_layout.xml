<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/month_record_select_month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableRight="@mipmap/arrow_down_icon"
        android:paddingLeft="20dp"
       android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="2æœˆ"
        android:textColor="#4A4A4A"
        android:textSize="18dp" />



    <com.haibin.calendarview.CalendarView
        android:id="@+id/month_record_calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:calendar_height="50dp"
        app:current_month_text_color="#333333"
        app:min_year="2004"
        app:month_view="com.ghs.ghspm.customView.CardMonthView"
        app:month_view_scrollable="false"
        app:month_view_show_mode="mode_only_current"
        app:other_month_text_color="#e1e1e1"
        app:scheme_text_color="#333"
        app:scheme_theme_color="#333"
        app:selected_text_color="#fff"
        app:selected_theme_color="#333"
        app:week_background="#fff"
        app:week_start_with="mon"
        app:week_text_color="#111"
        app:week_view="com.ghs.ghspm.customView.IndexWeekView" />




</LinearLayout>