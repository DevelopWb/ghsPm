<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/app_white">

    <TextView
        android:id="@+id/lack_cord_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text="*"
        android:textColor="@color/app_red_light"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/dynamic_layout_image_title_tv" />

    <TextView
        android:id="@+id/dynamic_layout_image_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:text="插入图片"
        android:textColor="@color/app_black"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/lack_cord_tag_tv"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        app:layout_constraintTop_toBottomOf="@+id/dynamic_layout_image_title_tv">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dynamic_layout_select_photos_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>