<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/creat_order_actionbar_top_ll"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bg_gray_only_bottom_deeper_gray_shape_1px"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/order_header_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:text="上一步"
        android:textColor="@color/app_default_blue"
        android:textSize="16dp"></TextView>

    <TextView
        android:id="@+id/order_header_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="设置"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/order_header_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="设置"
        android:textColor="@color/app_default_blue"
        android:textSize="16dp" />
</LinearLayout>
