<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/month_record_select_month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableEnd="@mipmap/arrow_down_icon"
        android:padding="10dp"
        android:text="2月"
        android:textColor="#4A4A4A"
        android:textSize="18dp" />


    <com.haibin.calendarview.CalendarView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/month_record_calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:calendar_height="50dp"
        app:current_month_text_color="#333333"
        app:min_year="2004"
        app:month_view="com.ghs.ghspm.customView.ShiftMonthView"
        app:month_view_scrollable="false"
        app:month_view_show_mode="mode_only_current"
        app:other_month_text_color="#e1e1e1"
        app:scheme_text_color="#333"
        app:scheme_theme_color="#333"
        app:selected_text_color="#fff"
        app:selected_theme_color="#333"
        app:week_background="#fff"
        app:week_start_with="mon"
        app:week_text_color="#111"
        app:week_view="com.ghs.ghspm.customView.IndexWeekView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="#F2F2F2"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
       >

        <TextView
            android:id="@+id/month_record_work_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="年月日"
            android:textColor="#808080"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/month_record_work_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="今日"
            android:textColor="#808080"
            android:textSize="14dp" />
    </LinearLayout>


</LinearLayout>