<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F1F1"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mine_user_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/app_white"
        android:paddingTop="25dp"
        android:paddingRight="20dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/mine_user_head_tv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="30dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/app_white"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" />

        <ImageView
            android:id="@+id/mine_user_head_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_user_head_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/mine_user_head_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_user_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white"
                android:gravity="left"
                android:text="平静如水"
                android:textColor="@color/app_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mine_user_mobile_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/app_white"
                android:gravity="left"
                android:text="123456"
                android:textColor="@color/app_black"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mine_user_arrow_right_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/arror_right" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#FFF1F1F1"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mine_system_notice_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_white"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
