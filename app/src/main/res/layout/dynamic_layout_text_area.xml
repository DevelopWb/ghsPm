<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="130dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/app_white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/lack_cord_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:text="*"
        android:textColor="@color/app_red_light"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/dynamic_layout_text_title_tv"
        app:layout_constraintTop_toTopOf="@+id/dynamic_layout_text_title_tv" />

    <TextView
        android:id="@+id/dynamic_layout_text_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:text="输入文字(多行)"
        android:textColor="@color/app_black"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/lack_cord_tag_tv"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/dynamic_layout_text_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="start"
        android:hint="请输入"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/app_black"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/dynamic_layout_text_title_tv" />

</android.support.constraint.ConstraintLayout>