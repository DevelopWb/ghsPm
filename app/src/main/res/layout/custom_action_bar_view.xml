<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/custom_action_bar_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:minWidth="45dp"
        android:minHeight="45dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/back_icon" />

    <TextView
        android:id="@+id/custom_action_bar_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/custom_action_bar_left_iv"
        android:gravity="center"
        android:minWidth="45dp"
        android:minHeight="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="左text"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/custom_action_bar_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minWidth="45dp"
        android:minHeight="45dp"
        android:text="标题"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/custom_action_bar_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/custom_action_bar_right_iv"
        android:gravity="center"
        android:minWidth="45dp"
        android:layout_alignWithParentIfMissing="true"
        android:minHeight="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="右text"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/custom_action_bar_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:minWidth="45dp"
        android:minHeight="45dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/back_icon" />


</RelativeLayout>