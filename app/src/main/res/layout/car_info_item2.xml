<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bind_car_item2_rv"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/car_info_item2_delete_bt"
        android:layout_height="match_parent"
        ></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/car_info_item2_delete_bt"
        android:layout_width="98dp"
        android:layout_centerVertical="true"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/bt_selecter_select_car_no"
        android:textColor="@color/app_red_light"
        android:text="删除"
        android:textSize="16dp"
        />
</RelativeLayout>