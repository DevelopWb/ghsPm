<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_white"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="20dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/property_record_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="访客姓名：" />

    <TextView
        android:id="@+id/property_record_item_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="手机号："
        app:layout_constraintTop_toBottomOf="@+id/property_record_item_name" />

    <TextView
        android:id="@+id/property_record_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="到访时间："
        app:layout_constraintTop_toBottomOf="@+id/property_record_item_mobile" />

    <TextView
        android:id="@+id/property_record_item_details"
        android:background="@drawable/bg_blue_circular_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/property_record_item_time"
        app:layout_constraintTop_toBottomOf="@+id/property_record_item_mobile" />

</android.support.constraint.ConstraintLayout>
